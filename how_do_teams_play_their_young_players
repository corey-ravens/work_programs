/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Filter it out so it is only players in their first 4 seasons in the data set and join 
in the player identifying info.

OUTPUT TABLE:
#temp_play_grade_counts_filtered

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_play_grade_counts_filtered exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_play_grade_counts_filtered') IS NOT NULL
	DROP TABLE #temp_play_grade_counts_filtered

	SELECT gc.*
		,pl.draft_round
		,pl.legacy_grade
		,pl.nfl_entry_club_id_not_bane
		,pl.nfl_entry_year
		,pl.position AS draft_position
		,pl.on_53
		,gc.season - pl.nfl_entry_year + 1 AS season_in_league
	INTO #temp_play_grade_counts_filtered
	FROM Analytics.dbo.work_player_play_grade_counts gc
	INNER JOIN #temp_player_list pl
		ON gc.nfl_player_id = pl.nfl_player_id
		AND gc.side_of_ball = pl.side_of_ball
	WHERE gc.season <= pl.nfl_entry_year + 3


/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Create a table of win probabaility by play.

OUTPUT TABLE:
#temp_win_prob

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_win_prob exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_win_prob') IS NOT NULL
	DROP TABLE #temp_win_prob

	SELECT DISTINCT pff_game_id
		,pff_play_id
		,team
		,win_pct_start
	INTO #temp_win_prob
	FROM #temp_all_snaps


/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Create a table of weeks by game id.

OUTPUT TABLE:
#temp_game_week

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_game_week exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_game_week') IS NOT NULL
	DROP TABLE #temp_game_week

	SELECT DISTINCT pff_game_id
		,[week]
	INTO #temp_game_week
	FROM #temp_all_snaps


/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Join back in the win probability column from the all snaps table

OUTPUT TABLE:
#temp_play_grade_counts_win_prob

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_play_grade_counts_win_prob exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_play_grade_counts_win_prob') IS NOT NULL
	DROP TABLE #temp_play_grade_counts_win_prob

	SELECT gf.*
		,[week]
		,win_pct_start
	INTO #temp_play_grade_counts_win_prob
	FROM #temp_play_grade_counts_filtered gf
	INNER JOIN #temp_win_prob wp
		ON gf.pff_game_id = wp.pff_game_id
		AND gf.pff_play_id = wp.pff_play_id
		AND (CASE WHEN gf.team = 'SD' THEN 'LAC' WHEN gf.team = 'SL' THEN 'LA' ELSE gf.team END) = (CASE WHEN wp.team = 'SD' THEN 'LAC' WHEN wp.team = 'SL' THEN 'LA' ELSE wp.team END)
	INNER JOIN #temp_game_week we
		ON gf.pff_game_id = we.pff_game_id

DROP TABLE #temp_play_grade_counts_filtered
DROP TABLE #temp_all_snaps


/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Create a table of playoff probability by season and week.

OUTPUT TABLE:
#temp_playoff_prob

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_playoff_prob exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_playoff_prob') IS NOT NULL
	DROP TABLE #temp_playoff_prob

	SELECT [season]
		,[week]
		,CASE WHEN [Team] IN ('SL','STL') THEN 'LA'
			WHEN [Team] IN ('SD') THEN 'LAC'
			ELSE [Team]
		END AS team
		,[P12] AS playoff_pct
	INTO #temp_playoff_prob
	FROM [AnalyticsWork].[dbo].[teamratings_simulations] ts


/*---------------------------------------------------------------------------------------------------------------------------------------------------------------------

Join the playoff probability to the plays table.

OUTPUT TABLE:
#temp_play_grade_counts_playoff_prob

----------------------------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Check if #temp_play_grade_counts_playoff_prob exists, if it does drop it
IF OBJECT_ID('tempdb..#temp_play_grade_counts_playoff_prob') IS NOT NULL
	DROP TABLE #temp_play_grade_counts_playoff_prob

	SELECT wp.*
		,playoff_pct
	INTO #temp_play_grade_counts_playoff_prob
	FROM #temp_play_grade_counts_win_prob wp
	INNER JOIN #temp_playoff_prob pp
		ON wp.season = pp.season
		AND wp.[week] = pp.[week]
		AND (CASE WHEN wp.team = 'SD' THEN 'LAC' WHEN wp.team = 'SL' THEN 'LA' ELSE wp.team END) = (CASE WHEN pp.team = 'SD' THEN 'LAC' WHEN pp.team = 'SL' THEN 'LA' ELSE pp.team END)


